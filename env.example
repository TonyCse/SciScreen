# Literature Review Pipeline Configuration
# Copy this file to .env and fill in your API keys and settings

# API Configuration
OPENALEX_BASE=https://api.openalex.org
UNPAYWALL_EMAIL=your.email@domain.com
ZOTERO_USER_ID=your_zotero_user_id
ZOTERO_API_KEY=your_zotero_api_key
PUBMED_EMAIL=your.email@domain.com
CROSSREF_MAILTO=your.email@domain.com

# Default Search Parameters
QUERY="cognitive behavioral therapy AND depression"
YEAR_FROM=2015
YEAR_TO=2025
LANGS=en,fr
ALLOW_PREPRINTS=false
PROJECT_NAME="My Literature Review"
ZOTERO_COLLECTION="Literature Review Collection"
TOP_N=2000

# Processing Configuration
MAX_WORKERS=4
BATCH_SIZE=100
RATE_LIMIT_DELAY=1.0

# Deduplication Settings
TITLE_SIMILARITY_THRESHOLD=0.85
LEVENSHTEIN_THRESHOLD=3
YEAR_TOLERANCE=1

# Scoring Model
MODEL_PATH=models/screening_model.joblib
CONFIDENCE_THRESHOLD=0.5

# Output Settings
OUTPUT_FORMAT=xlsx
INCLUDE_ABSTRACTS=true
INCLUDE_FULLTEXT=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Optional: R Integration
R_ENABLED=false
RENV_RESTORE=false
